{
  "name": "date-provider",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "contracts/date-provider/src",
  "projectType": "library",
  "tags": ["scope:contract", "type:date-provider"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/contracts/date-provider",
        "main": "contracts/date-provider/src/index.ts",
        "tsConfig": "contracts/date-provider/tsconfig.lib.json",
        "assets": ["contracts/date-provider/*.md"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/contracts/date-provider"
      }
    }
  }
}
