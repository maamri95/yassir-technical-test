{
  "name": "storage",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "contracts/storage/src",
  "projectType": "library",
  "tags": ["scope:contract", "type:storage"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/contracts/storage",
        "main": "contracts/storage/src/index.ts",
        "tsConfig": "contracts/storage/tsconfig.lib.json",
        "assets": ["contracts/storage/*.md"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/contracts/storage"
      }
    }
  }
}
