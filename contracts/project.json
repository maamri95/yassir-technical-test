{
  "name": "contracts",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "contracts/src",
  "projectType": "library",
  "tags": ["scope:contracts"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/contracts",
        "main": "contracts/src/index.ts",
        "tsConfig": "contracts/tsconfig.lib.json",
        "assets": ["contracts/*.md"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../coverage/contracts"
      }
    }
  }
}
